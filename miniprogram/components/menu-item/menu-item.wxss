/* components/menu-item/menu-item.wxss */
.border {
  box-sizing: border-box; /* Include padding and borders in the element's width and height */
  height: 7vh;
  width: 100%;
  overflow: hidden;
  /* centering start */
  display: flex;
  align-items: center; /* Center vertically */
  justify-content: center; /* Center horizontally */
  /* centering end */
  /* background-color: crimson; */
}

.content {
  width: 90%;
  height: 80%;
  padding-left: 3vh; /* controls left, right side controlled by image-cropper-right's margin-right */
  font-weight: 400;
  font-size: 2.2vh;
  /* centering start */
  display: grid;
  grid-template-columns: 1fr 10fr 1fr;
  align-items: center; /* Center vertically */
  justify-content: center; /* Center horizontally */
  /* centering end */
  /* background-color: cyan; */
}

