/* components/menu-item/menu-item.wxss */
.border {
  box-sizing: border-box; /* Include padding and borders in the element's width and height */
  height: 7vh;
  width: 100%;
  overflow: hidden;
  /* centering start */
  display: flex;
  align-items: center; /* Center vertically */
  justify-content: center; /* Center horizontally */
  /* centering end */
  /* background-color: crimson; */
}

.content {
  width: 90%;
  height: 80%;
  padding-left: 3vh; /* controls left, right side controlled by image-cropper-right's margin-right */
  font-weight: 400;
  font-size: 2.2vh;
  /* centering start */
  display: flex;
  align-items: center; /* Center vertically */
  justify-content: center; /* Center horizontally */
  /* centering end */
  /* background-color: cyan; */
}

.image-cropper {
  width:5%;
  padding-top: 5%; /* same as width for a square */
  position: relative;
  display: inline-flex;
  overflow: hidden;
  margin-right: 1vh;
  /* background-color: darkblue; */
}

.icon {
  /* align to image-cropper start */
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  position: absolute;
  /* align to image-cropper end */
  height: 100%;
  width: 100%;
}

.title {
  width: 50%;
}

.image-cropper-right {
  width:2%;
  padding-top: 4%; /* keep the ratio to width */
  position: relative;
  display: inline-flex;
  overflow: hidden;
  margin-left: auto;
  margin-right: 2vh;
  /* background-color: darkblue; */
}

.arrow {
  /* align to image-cropper start */
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  position: absolute;
  /* align to image-cropper end */
  height: 100%;
  width: 100%;
}