/* static/styles/style.wxss */

/**
  * items and its hover-class
  */

/* button */
button {
  color: white;
  background-color: #00adef;
}
button.btn-hover {
  background-color: #0085b9;
}


/* generic item */
.item-hover {
  background-color: #e9e9e9;
}



/**
  * invoice
  */
.invoice-input-format {
  height: 5.5vh;
  display: grid;
  grid-template-columns: 2fr 5fr;
  align-items: center; /* Center vertically */
}

